.album-detail
  .fixed-close
    position fixed
    width 100%
    height 46px
    z-index 30
    .close-img
      width 30px
      height 30px
      background url(./close.png) no-repeat center center
      background-size 70%
  .album-wrapper
    width 100%
    padding:70px 10% 50px
    height 95%
    position absolute
    overflow-y auto
    z-index: 12
    display flex
    flex-direction column
    align-items center
    color #fff
    img
      width 60%
    h1
      font-size 14px
      font-weight 500
      margin 20px auto
    .subType
      align-self flex-start
      margin-bottom 20px
      font-size 12px
      color #fff
    .description
      margin 20px auto
      font-size 12px
      align-self flex-start


