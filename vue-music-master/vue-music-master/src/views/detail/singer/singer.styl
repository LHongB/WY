.singer-detail
  .vux-header .vux-header-left .left-arrow
    &:before
      border 1px solid #fff
      border-width 1px 0 0 1px
  .singer-info
    position: relative;
    width: 100%;
    height: 180px;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    .singer-page
      font-size 18px
      border 1px solid #fff
      padding 2px 15px
      color #fff;
      display inline-block
      border-radius 20px
      right 20px
      bottom 20px
      position absolute
  .tab-list
    position fixed
    width 100%
    height 100%
    z-index 100
    padding-bottom 225px
    .vux-swiper,
    .vux-slider,
    .tab-swiper
      height 100%
    .tab-swiper
      background-color #fff
    .list-area
      background-color: #fff;
      width: 100%;
      height: 100%;
      overflow: auto;
      ul
        list-style: none
        li
          padding-left 5px
    .album-list-detail
      background-color #fff
      width 100%
      height 100%
      overflow auto
      ul
        list-style none
        li
          padding-left 5px
    .hot-single-list
      background-color #fff
      width 100%
      height 100%
      overflow auto
      ul
        list-style none
        li
          padding inherit
          border none
// 过渡效果
.fade-enter-active, .fade-leave-active {
  transition: all .4s;
}
.fade-enter, .fade-leave {
  transform: translate(100%, 0);
}
